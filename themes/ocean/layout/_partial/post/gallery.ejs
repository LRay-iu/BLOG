<% if (post.photos && post.photos.length){ %>
  <div class="article-gallery">
    <div class="article-gallery-photos" style="display: flex; justify-content:left; flex-wrap: wrap;">
      <% post.photos.forEach(function(photo, i){ %>
        <% if (index){ %>
          <a class="article-gallery-img" href="<%- url_for(post.path) %>" rel="gallery_<%= post._id %>" style="margin: 10px;">
            <img src="<%- url_for(photo) %>" itemprop="image" style="max-width: 150px; max-height: 150px;border-radius: 15px;">
          </a>
        <% } else { %>
          <img src="<%- url_for(photo) %>" itemprop="image" style="max-width: 150px; max-height: 150px; margin: 10px;border-radius: 15px;">
        <% } %>
      <% }) %>
    </div>
  </div>
<% } %>
