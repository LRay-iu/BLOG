<style>
  .font{
    font-family: "SongHuiZongShouJinJiaCuBan-2", "Aa宋徽宗瘦金加粗版 (非商业使用)"
  }
.video-frame{
  object-fit: fill;
  margin-bottom: -1px;
  width:105%;
}
h1 a{
  text-shadow: 1px 0px 5px #000000, 1px 2px 8px #000000, 2px 1px 11px #000000;
}

.typing {
    color: white;
    /* font-size: 2em; */
    width:265px;
    height: 1.5em;
    border-right: 1px solid transparent;
    /*时间、字符数、光标频率*/
    animation: typing 2s steps(15, end), blink-caret .75s step-end infinite;
    font-family: Consolas, Monaco;
    word-break: break-all;
    overflow: hidden;
}
/* 打印效果 */
@keyframes typing {
    from {
        width: 0;
    }

    to {
        width: 264px;
    }
}

/* 光标 */
@keyframes blink-caret {

    from,
    to {
        border-color: transparent;
    }

    50% {
        border-color: currentColor;
    }
}
</style>